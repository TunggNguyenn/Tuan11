                        <Fluent:GalleryItem>
                            <Fluent:Button Header="Eraser" SizeDefinition="Small">
                                <Fluent:Button.Icon>
                                    <Image RenderOptions.BitmapScalingMode="HighQuality" Source="/Images/eraser.png"/>
                                </Fluent:Button.Icon>
                                <Fluent:Button.LargeIcon>
                                    <Image RenderOptions.BitmapScalingMode="HighQuality" Source="/Images/eraser.png"/>
                                </Fluent:Button.LargeIcon>
                            </Fluent:Button>
                        </Fluent:GalleryItem>
                        <Fluent:GalleryItem>
                            <Fluent:Button Header="ColorPicker" SizeDefinition="Small">
                                <Fluent:Button.Icon>
                                    <Image RenderOptions.BitmapScalingMode="HighQuality" Source="/Images/color-picker.png"/>
                                </Fluent:Button.Icon>
                                <Fluent:Button.LargeIcon>
                                    <Image RenderOptions.BitmapScalingMode="HighQuality" Source="/Images/color-picker.png"/>
                                </Fluent:Button.LargeIcon>
                            </Fluent:Button>
                        </Fluent:GalleryItem>
                        <Fluent:GalleryItem>
                            <Fluent:Button Header="Magnifier" SizeDefinition="Small">
                                <Fluent:Button.Icon>
                                    <Image RenderOptions.BitmapScalingMode="HighQuality" Source="/Images/magnifier.png"/>
                                </Fluent:Button.Icon>
                                <Fluent:Button.LargeIcon>
                                    <Image RenderOptions.BitmapScalingMode="HighQuality" Source="/Images/magnifier.png"/>
                                </Fluent:Button.LargeIcon>
                            </Fluent:Button>
