<Fluent:RibbonWindow x:Class="_1712884.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_1712884"
        mc:Ignorable="d"
        xmlns:Fluent="urn:fluent-ribbon"
        Title="Paint" Icon="/Images/paint.png" Height="800" Width="1200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- QuickAccessItems -->
        <Fluent:Ribbon Grid.Row="0">
            <Fluent:Ribbon.QuickAccessItems>
                <Fluent:QuickAccessMenuItem IsChecked="True">
                    <Fluent:Button Header="New">
                        <Fluent:Button.Icon>
                            <Image Source="/Images/new.png" RenderOptions.BitmapScalingMode="HighQuality"/>
                        </Fluent:Button.Icon>
                        <Fluent:Button.LargeIcon>
                            <Image Source="/Images/new.png" RenderOptions.BitmapScalingMode="HighQuality"/>
                        </Fluent:Button.LargeIcon>
                    </Fluent:Button>
                </Fluent:QuickAccessMenuItem>
                
                <Fluent:QuickAccessMenuItem IsChecked="True">
                    <Fluent:Button Header="Open">
                        <Fluent:Button.Icon>
                            <Image Source="/Images/open.png" RenderOptions.BitmapScalingMode="HighQuality"/>
                        </Fluent:Button.Icon>
                        <Fluent:Button.LargeIcon>
                            <Image Source="/Images/open.png" RenderOptions.BitmapScalingMode="HighQuality"/>
                        </Fluent:Button.LargeIcon>
                    </Fluent:Button>
                </Fluent:QuickAccessMenuItem>
                
                <Fluent:QuickAccessMenuItem IsChecked="True">
                    <Fluent:Button Header="Save">
                        <Fluent:Button.Icon>
                            <Image Source="/Images/save.png" RenderOptions.BitmapScalingMode="HighQuality"/>
                        </Fluent:Button.Icon>
                        <Fluent:Button.LargeIcon>
                            <Image Source="/Images/save/png" RenderOptions.BitmapScalingMode="HighQuality"/>
                        </Fluent:Button.LargeIcon>
                    </Fluent:Button>
                </Fluent:QuickAccessMenuItem>

                <Fluent:QuickAccessMenuItem IsChecked="True">
                    <Fluent:Button Header="Undo">
                        <Fluent:Button.Icon>
                            <Image Source="/Images/undo.png" RenderOptions.BitmapScalingMode="HighQuality"/>
                        </Fluent:Button.Icon>
                        <Fluent:Button.LargeIcon>
                            <Image Source="/Images/undo.png" RenderOptions.BitmapScalingMode="HighQuality"/>
                        </Fluent:Button.LargeIcon>
                    </Fluent:Button>
                </Fluent:QuickAccessMenuItem>


                <Fluent:QuickAccessMenuItem IsChecked="True">
                    <Fluent:Button Header="Reundo">
                        <Fluent:Button.Icon>
                            <Image Source="/Images/reundo.png" RenderOptions.BitmapScalingMode="HighQuality"/>
                        </Fluent:Button.Icon>
                        <Fluent:Button.LargeIcon>
                            <Image Source="/Images/reundo.png" RenderOptions.BitmapScalingMode="HighQuality"/>
                        </Fluent:Button.LargeIcon>
                    </Fluent:Button>
                </Fluent:QuickAccessMenuItem>
            </Fluent:Ribbon.QuickAccessItems>

            <!--Backstage-->
            <Fluent:Ribbon.Menu>
                <Fluent:Backstage>
                    <Fluent:BackstageTabControl>
                        <Fluent:BackstageTabItem Header="New" RenderOptions.BitmapScalingMode="HighQuality" Icon="/Images/new.png"/>
                        <Fluent:BackstageTabItem Header="Open" RenderOptions.BitmapScalingMode="HighQuality" Icon="/Images/open.png"/>
                        <Fluent:BackstageTabItem Header="Save" RenderOptions.BitmapScalingMode="HighQuality" Icon="/Images/save.png"/>
                        <Fluent:BackstageTabItem Header="Save As" RenderOptions.BitmapScalingMode="HighQuality" Icon="/Images/saveas.png">
                            <Fluent:GalleryGroupContainer Header="Save as" Orientation="Vertical">
                                <Fluent:GalleryItem >
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="1*"/>
                                            <ColumnDefinition Width="9*"/>
                                        </Grid.ColumnDefinitions>

                                        <Image Source="/Images/png.png" RenderOptions.BitmapScalingMode="HighQuality" Height="80" Grid.Column="0"/>
                                        <Grid Grid.Column="1">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="3*"/>
                                                <RowDefinition Height="7*"/>
                                            </Grid.RowDefinitions>
                                            <TextBlock Text="PNG picture" FontSize="20" Foreground="Red" FontWeight="Bold" Grid.Row="0"/>
                                            <TextBlock Text="Save a photo or drawing with high quality and use it on your computer or on the web." FontSize="20" Grid.Row="1"/>
                                        </Grid>
                                    </Grid>
                                </Fluent:GalleryItem>
                                <Fluent:GalleryItem >
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="1*"/>
                                            <ColumnDefinition Width="9*"/>
                                        </Grid.ColumnDefinitions>

                                        <Image Source="/Images/jpeg.png" RenderOptions.BitmapScalingMode="HighQuality" Height="80" Grid.Column="0"/>
                                        <Grid Grid.Column="1">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="3*"/>
                                                <RowDefinition Height="7*"/>
                                            </Grid.RowDefinitions>
                                            <TextBlock Text="JPEG picture" FontSize="20" Foreground="Red" FontWeight="Bold" Grid.Row="0"/>
                                            <TextBlock Text="Save a photo with good quality and use it on your computer, in email, or on the web." FontSize="20" Grid.Row="1"/>
                                        </Grid>
                                    </Grid>
                                </Fluent:GalleryItem>
                                <Fluent:GalleryItem >
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="1*"/>
                                            <ColumnDefinition Width="9*"/>
                                        </Grid.ColumnDefinitions>

                                        <Image Source="/Images/bmp.png" RenderOptions.BitmapScalingMode="HighQuality" Height="80" Grid.Column="0"/>
                                        <Grid Grid.Column="1">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="3*"/>
                                                <RowDefinition Height="7*"/>
                                            </Grid.RowDefinitions>
                                            <TextBlock Text="BMP picture" FontSize="20" Foreground="Red" FontWeight="Bold" Grid.Row="0"/>
                                            <TextBlock Text="Save any kind of picture with high quality and use it on your computer." FontSize="20" Grid.Row="1"/>
                                        </Grid>
                                    </Grid>
                                </Fluent:GalleryItem>
                                <Fluent:GalleryItem >
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="1*"/>
                                            <ColumnDefinition Width="9*"/>
                                        </Grid.ColumnDefinitions>

                                        <Image Source="/Images/gif.png" RenderOptions.BitmapScalingMode="HighQuality" Height="80" Grid.Column="0"/>
                                        <Grid Grid.Column="1">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="3*"/>
                                                <RowDefinition Height="7*"/>
                                            </Grid.RowDefinitions>
                                            <TextBlock Text="GIF picture" FontSize="20" Foreground="Red" FontWeight="Bold" Grid.Row="0"/>
                                            <TextBlock Text="Save a simple drawing with lower quality and use it in email or on the web." FontSize="20" Grid.Row="1"/>
                                        </Grid>
                                    </Grid>
                                </Fluent:GalleryItem>
                                <Fluent:GalleryItem >
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="1*"/>
                                            <ColumnDefinition Width="9*"/>
                                        </Grid.ColumnDefinitions>

                                        <Image Source="/Images/otherformats.png" RenderOptions.BitmapScalingMode="HighQuality" Height="80" Grid.Column="0"/>
                                        <Grid Grid.Column="1">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="3*"/>
                                                <RowDefinition Height="7*"/>
                                            </Grid.RowDefinitions>
                                            <TextBlock Text="Other formats" FontSize="20" Foreground="Red" FontWeight="Bold" Grid.Row="0"/>
                                            <TextBlock Text="Open the Save As dialog box to select from all possible file types." FontSize="20" Grid.Row="1"/>
                                        </Grid>
                                    </Grid>
                                </Fluent:GalleryItem>
                            </Fluent:GalleryGroupContainer>
                        </Fluent:BackstageTabItem>
                    </Fluent:BackstageTabControl>
