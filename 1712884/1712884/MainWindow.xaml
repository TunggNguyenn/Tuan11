                                    <Fluent:Button.LargeIcon>
                                        <Image Source="/Images/paint-brush-2.png" RenderOptions.BitmapScalingMode="HighQuality"/>
                                    </Fluent:Button.LargeIcon>
                                </Fluent:Button>
                            </Fluent:GalleryItem>
                            <Fluent:GalleryItem>
                                <Fluent:Button Height="40" Width="40" RenderOptions.BitmapScalingMode="HighQuality" BorderThickness="1" BorderBrush="Black">
                                    <Fluent:Button.Icon>
                                        <Image Source="/Images/paint-brush-3.png" RenderOptions.BitmapScalingMode="HighQuality"/>
